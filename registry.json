{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "shadcn-natural-language-datetime-input",
  "homepage": "https://iloveitaly.github.io/shadcn-natural-language-datetime-input",
  "items": [
    {
      "name": "lingua-time",
      "type": "registry:component",
      "title": "Natural Language DateTime Picker",
      "description": "A powerful datetime picker component that accepts natural language input like 'tomorrow at 3pm' or 'next Monday'.",
      "dependencies": ["chrono-node", "date-fns"],
      "registryDependencies": ["button", "calendar", "input", "popover", "drawer"],
      "files": [
        {
          "path": "registry/new-york/lingua-time/datetime-picker.tsx",
          "target": "~/app/components/lingua-time/datetime-picker.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/new-york/lingua-time/datetime-picker-popover.tsx",
          "target": "~/app/components/lingua-time/datetime-picker-popover.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/new-york/lingua-time/datetime-utils.ts",
          "target": "~/app/components/lingua-time/datetime-utils.ts",
          "type": "registry:lib"
        }
      ]
    },
    {
      "name": "time-picker",
      "type": "registry:component", 
      "title": "Time Picker",
      "description": "A time picker component that works with the datetime picker.",
      "registryDependencies": ["button", "input", "select"],
      "files": [
        {
          "path": "registry/new-york/time-picker/time-picker.tsx",
          "target": "~/app/components/time-picker/time-picker.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/new-york/time-picker/time-picker-input.tsx",
