{
  "name": "shadcn-natural-language-datetime-input",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A powerful ShadCN/UI component library for natural language datetime input. Parse expressions like 'tomorrow at 3pm', 'next Monday', or 'in 2 hours' with built-in calendar and time picker support.",
  "homepage": "https://iloveitaly.github.io/shadcn-natural-language-datetime-input",
  "keywords": [
    "shadcn",
    "shadcn-ui",
    "shadcn-registry",
    "datetime",
    "date-picker",
    "time-picker",
    "natural-language",
    "chrono-node",
    "react",
    "typescript",
    "tailwindcss",
    "calendar",
    "date-input",
    "ui-components"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "format": "prettier --write .",
    "lint": "eslint .",
    "registry:build": "shadcn registry:build",
    "upgrade:shadcn": "npx --yes shadcn@canary add --all --overwrite --yes",
    "upgrade:packages": "pnpx npm-check-updates --interactive --format group"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@vitejs/plugin-react": "^4.6.0",
    "chrono-node": "^2.8.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.523.0",
    "react": "^19.1.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "^19.1.0",
    "shadcn": "2.7.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "vite": "^7.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jiti": "^2.4.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "prettier": {
    "semi": false,
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderGroupNamespaceSpecifiers": true,
    "importOrder": [
      "^[:alpha].*$",
      "^@remix(.*)$",
      "^(@mantine|@emotion|@nivo)(.*)$",
      "^~/",
      "./"
    ],
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
